<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/home_menu_button_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/clear_color"
        android:clickable="true"
        android:contentDescription="@string/button_home_menu_description"
        android:paddingHorizontal="@dimen/spacing_none"
        android:paddingVertical="@dimen/spacing_none"
        android:scaleType="fitXY"
        android:scaleX="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selector_home_screen_navigation_tab" />

    <TextView
        android:id="@+id/home_menu_button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_parks"
        android:theme="@style/fontStyleDark"
        app:layout_constraintBottom_toBottomOf="@+id/home_menu_button_navigation"
        app:layout_constraintEnd_toEndOf="@+id/home_menu_button_navigation"
        app:layout_constraintStart_toStartOf="@+id/home_menu_button_navigation"
        app:layout_constraintTop_toTopOf="@+id/home_menu_button_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>