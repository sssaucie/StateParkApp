<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/utah_dnr"
        style="@style/fontStyleLight"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeTextType="uniform"
        android:text="@string/utah_dnr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/utah_dnr"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/utah_dnr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/utah_dnr"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_reserve_button" />

    <TextView
        android:id="@+id/textView"
        style="@style/fontStyleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_reserve"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>