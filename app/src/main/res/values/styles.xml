<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/utah_dnr_logo</item>
    </style>

    <style name="fontStyleLight" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="fontStyleDark" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="headerStyle" parent="fontStyleLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/kombu_green</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="reserveButton" parent="fontStyleLight">
        <item name="android:textSize">13.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>