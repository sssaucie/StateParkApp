<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LaunchTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_logo_utah_dnr</item>
    </style>

    <style name="fontStyleLight" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:shadowColor">@color/kombu_green</item>
    </style>

    <style name="fontStyleDark" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:shadowColor">@color/cornsilk</item>
    </style>

    <style name="headerStyle" parent="fontStyleLight">
        <item name="android:textSize">16sp</item>
<!--        Header shadow settings-->
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">2</item>


    </style>
    <style name="headerStyle2" parent="fontStyleLight">
    <item name="android:textSize">32sp</item>
<!--        Header2 shadow settings-->
    <item name="android:shadowDx">0.5</item>
    <item name="android:shadowDy">0.5</item>
    <item name="android:shadowRadius">2</item>
    </style>

    <style name="reserveButton" parent="fontStyleLight">
        <item name="android:textSize">13.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mapsButton" parent="fontStyleDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>